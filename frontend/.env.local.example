# =============================================
# PREPIQ FRONTEND ENVIRONMENT CONFIGURATION
# =============================================
#
# This file contains frontend environment variables for Next.js
# Variables prefixed with NEXT_PUBLIC_ are available in the browser
#
# Copy this file to .env.local and fill in your actual values

# =============================================
# FRONTEND API CONFIGURATION
# =============================================
# API URL for frontend to communicate with backend
# Use http://localhost:8000 for local development
# Use your production backend URL for deployed environments
NEXT_PUBLIC_API_URL=http://localhost:8000

# =============================================
# SUPABASE CONFIGURATION
# =============================================
# Supabase project URL and anonymous key
# Get these from your Supabase project dashboard
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# =============================================
# FRONTEND SPECIFIC SETTINGS
# =============================================
# Frontend application settings
NEXT_PUBLIC_APP_NAME=PrepIQ
NEXT_PUBLIC_APP_DESCRIPTION=AI-Powered Exam Preparation Platform

# =============================================
# OPTIONAL FEATURE FLAGS
# =============================================
# Enable/disable specific features
# NEXT_PUBLIC_ENABLE_ANALYTICS=true
# NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true
